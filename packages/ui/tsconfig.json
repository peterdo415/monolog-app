{
  "extends": "@monolog/typescript-config/react-library.json",
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "module": "NodeNext",
    "target": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "paths": {
      "@monolog/db": ["../db/src/index.ts"],
      "@monolog/db/*": ["../db/src/*"],
      "@monolog/db/schema": ["../db/src/schema/index.ts"],
      "@monolog/ui": ["./src/index.ts"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
