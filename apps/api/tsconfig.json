{
  "extends": "@monolog/typescript-config/nestjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "strict": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": "/app",
    "skipLibCheck": false,
    "typeRoots": [
      "/app/node_modules/@types"
    ],
    "types": [
      "node",
      "jest",
      "express"
    ],
    "paths": {
      "*": [
        "/app/node_modules/*",
        "/app/node_modules/@types/*"
      ]
    }
  },
  "references": [
    {
      "path": "../../packages/db/tsconfig.json"
    }
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "node_modules/drizzle-orm/singlestore*",
    "node_modules/drizzle-orm/sqlite*",
    "node_modules/drizzle-orm/mysql2*"
  ]
}
