{
  "extends": "@monolog/typescript-config/nestjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "CommonJS",
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@monolog/db/*": ["../../packages/db/src/*"],
      "@monolog/api/*": ["src/*"]
    },
    "skipLibCheck": true,
  },
  "references": [
    {
      "path": "../../packages/db/tsconfig.json"
    }
  ],
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
